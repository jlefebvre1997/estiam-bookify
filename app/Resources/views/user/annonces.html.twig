{% extends 'base.html.twig' %}

{% block body %}
    <h2>Mes annonces : </h2>
    <div class="row">
        {% for annonce in annonces %}
            <div class="col s12 m4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ annonce.title }}</span>
                        <p>{{ annonce.description }}</p>
                        <br/>
                        <p>{{ annonce.createdAt|date('d/m/Y Ã  H:i') }}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path('annonce_view', {'id': annonce.id}) }}">Voir l'annonce</a>
                        <br/>
                        <a href="{{ path('delete_annonce', {'id': annonce.id}) }}">Supprimer l'annonce</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
